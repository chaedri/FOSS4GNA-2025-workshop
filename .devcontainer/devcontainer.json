{
	"name": "GRASS Addon Workshop",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"runArgs": [
		"--init",
		"--env",
		"DISPLAY",
		"--volume=/tmp/.X11-unix:/tmp/.X11-unix:rw"
	],
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.shell.linux": "/bin/bash",
				"python.analysis.autoImportCompletions": true,
				"editor.formatOnSave": true,
				"python.defaultInterpreterPath": "/workspaces/FOSS4GNA-2025-workshop/.venv/bin/python",
				"python.venvPath": "/workspaces/FOSS4GNA-2025-workshop"
			},
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"ms-vscode.cpptools",
				"eamodio.gitlens"
			]
		}
	},
	"postCreateCommand": {
		"uv": "uv sync --locked",
		"grass": ["grass", "--version", "&&", "echo", "'GRASS is ready!'"]
	},
	"remoteUser": "root",
	"mounts": [
		"source=${localWorkspaceFolder},target=/workspaces/grass-addon-workshop,type=bind,consistency=cached"
	]
}
